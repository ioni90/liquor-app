<h2>ユーザー新規登録画面</h2>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, value='メール：' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%if @sns_id.present? %>
    <%= hidden_field_tag :sns_auth, true %>
  <% else %>
  <div class="field">
    <%= f.label :password, value='パスワード' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字まで)：</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, value='パスワード再入力：' %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <% end %>

  <div class="field">
    <%= f.label :nickname, value='ユーザー名：' %>
    <%= f.text_field :nickname %>
  </div>

  <div class="field">
    <%= f.label :gender_id, value='性別：' %>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"pull-select"}) %>
  </div>

  <div class="field">
    <%= f.label :age_id, value='年齢：' %>
    <%= f.collection_select(:age_id, Age.all, :id, :name, {}, {class:"pull-select"}) %>
  </div>

  <div class="field">
    <%= f.label :prefecture_id, value='お住まいの都道府県：' %>
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"pull-select"}) %>
  </div>

  <div class="field">
    <%= f.label :region_id, value='お住まいの地域：' %>
    <%= f.collection_select(:region_id, Region.all, :id, :name, {}, {class:"pull-select"}) %>
  </div>

  <div class="field">
    <%= f.label :favorite_id, value='お好みのお酒：' %>
    <%= f.collection_select(:favorite_id, Favorite.all, :id, :name, {}, {class:"pull-select"}) %>
  </div>

  <div class="actions">
    <%= f.submit "ユーザー登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
